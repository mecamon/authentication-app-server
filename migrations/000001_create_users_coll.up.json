[{
  "create": "users",
  "validator": {
    "$jsonSchema": {
      "bsonType": "object",
      "required": ["email", "password", "is_active"],
      "properties": {
        "email": {
          "bsonType": "string",
          "description": "must be a string and required"
        },
        "password": {
          "bsonType": "string",
          "description": "must be a string and required"
        },
        "is_active": {
          "bsonType": "bool",
          "description": "is a boolean and required"
        },
        "name": {
          "bsonType": "string",
          "description": "must be a string"
        },
        "bio": {
          "bsonType": "string",
          "description": "must be a string"
        },
        "phone": {
          "bsonType": "long",
          "description": "must be a long int"
        },
        "photoURL": {
          "bsonType": "string",
          "description": "must be a string"
        },
        "created_at": {
          "bsonType": "timestamp",
          "description": "must be a timestamp"
        },
        "updated_at": {
          "bsonType": "timestamp",
          "description": "must be a timestamp"
        }
      }
    }
  },
  "validationLevel": "strict",
  "validationAction": "error"
}]

